    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,

    "outDir": "./dist",
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "allowJs": true,
    
    "strict": false,
  }

}